{
  "exclusive": true,
  "reload_style_on_change": true,
  "layer": "top",
  "position": "top",
  "height": 32,
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/submap",
    "wlr/taskbar",
    "mpris"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "hyprland/language",
    "custom/weather",
    "network",
    "bluetooth",
    "pulseaudio",
    "battery",
    "tray",
    "clock"
